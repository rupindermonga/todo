 
<%= form_for @task do |f| %>
    <%= render "error_list", object: @task %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :details %><br>
    <%= f.text_area :details %><br>
    <% if request.path.include?("edit") %>
        <%= f.label :Completed? %>
        <%= f.check_box :completed %><br>
    <% end %>
    <%= f.submit %>
<% end %>

